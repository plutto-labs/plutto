<div class='flex justify-center my-8'>
  <div class='w-full max-w-lg px-16 pt-4 pb-8 mb-4 bg-white border-t-8 shadow-md border-primary'>
    <div class="flex justify-center h-12 mt-4 mb-8">
      <%= image_tag('logo.png') %>
    </div>
    <h1 class='mb-8 text-xl text-primary'>Create your new password</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4') do |f| %>
      <%= f.hidden_field :reset_password_token %>
      <div class='mb-4'>
        <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'New password', class: 'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary'%>
      </div>
      <div class='mb-4'>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'Password confirmation', class: 'appearance-none rounded-lg w-full py-2 px-3 text-gray-700 text-sm leading-tight focus:outline-none focus:shadow-outline border hover:border-primary' %>
      </div>
      <% if flash.alert %>
      <div
        class='relative my-3 text-sm text-red-700'
        role="alert"
      >
        <ul>
        <li><%= flash.alert %></li>
        </ul>
      </div>
      <% end %>
      <div>
        <div class='flex justify-around mb-4'>
          <%= f.submit 'Change password', class: 'bg-primary mx-2 rounded-lg hover:bg-gray-600 tracking-widest text-white py-1 px-8 mt-5 rounded focus:outline-none focus:shadow-outline' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
